<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolBar"
            layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp"
        android:weightSum="7">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/orgNameDonor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorTheme"
                android:hint="Name of Organization"
                android:inputType="textCapSentences"
                android:textColor="@color/black"
                android:paddingBottom="24dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textCursorDrawable="@drawable/ic_cursor" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Donor's Details"
            android:textStyle="bold"
            android:textColor="@color/colorTheme"
            android:gravity="center"
            android:textSize="@dimen/dimen_20dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/donorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorTheme"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:paddingBottom="24dp"
                android:textCursorDrawable="@drawable/ic_cursor" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/donorEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorTheme"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingBottom="24dp"
                android:textCursorDrawable="@drawable/ic_cursor" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/donorLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorTheme"
                android:hint="Location"
                android:inputType="text"
                android:paddingBottom="24dp"
                android:textCursorDrawable="@drawable/ic_cursor" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/donorPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorTheme"
                android:hint="Phone no."
                android:inputType="number"
                android:paddingBottom="24dp"

                android:textCursorDrawable="@drawable/ic_cursor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="What did they donate?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="4"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/food_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/checkBoxColor"
                    android:hint="Food"
                    android:textColorHint="@color/black" />

                <CheckBox
                    android:id="@+id/clothes_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/checkBoxColor"
                    android:hint="Clothes"
                    android:textColorHint="@color/black" />

                <CheckBox
                    android:id="@+id/books_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/checkBoxColor"
                    android:hint="Books"
                    android:textColorHint="@color/black"


                    />

                <CheckBox
                    android:id="@+id/stationery_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/checkBoxColor"
                    android:hint="Stationery"
                    android:textColorHint="@color/black" />
            </LinearLayout>


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/describeItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorTheme"
                android:hint="Describe Items"
                android:inputType="textMultiLine"
                android:paddingBottom="24dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/ic_cursor" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/donorAddBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/round_button"
            android:text="ADD"
            android:layout_marginBottom="24dp"
            android:textColor="@color/white" />

    </LinearLayout>

    </LinearLayout>

</ScrollView>