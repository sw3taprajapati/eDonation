<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sweta.edonation">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup">
        <activity
            android:name=".activities.SplashActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.OrganizationDetailActivity" />
        <activity android:name=".activities.OrganizationDashboardActivity" />
        <activity android:name=".activities.OrganizationRegisterActivity" />
        <activity android:name=".activities.OrganizationLoginActivity" />
        <activity android:name=".activities.EditProfileActivity" />
        <activity android:name=".activities.AboutAppActivity" />
        <activity android:name=".activities.OnVerifyActivity" />
        <activity android:name=".activities.AdminActivity" />
        <activity android:name=".activities.AddDonorActivity"/>
        <activity android:name=".activities.OurDonorsActivity"/>
        <activity android:name=".activities.DonorDetailsActivity"/>
        <activity android:name=".activities.MainDashboardActivity" />
        <activity android:name=".activities.ForgotPasswordActivity" />
        <activity android:name=".activities.ChangePasswordActivity"></activity>
    </application>

</manifest>